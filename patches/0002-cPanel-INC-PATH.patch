-    INCPUSH_SITEARCH_EXP
-    INCPUSH_SITELIB_EXP
+    S_incpush_use_sep(aTHX_ STR_WITH_LEN("/usr/local/cpanel"), INCPUSH_CAN_RELOCATE);
     INCPUSH_PERL_VENDORARCH_EXP
     INCPUSH_PERL_VENDORLIB_EXP
     INCPUSH_ARCHLIB_EXP
     INCPUSH_PRIVLIB_EXP
+    INCPUSH_SITEARCH_EXP
+    INCPUSH_SITELIB_EXP
     INCPUSH_PERL_OTHERLIBDIRS
     INCPUSH_PERL5LIB
